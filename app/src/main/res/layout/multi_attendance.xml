<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    android:padding="6dip">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:text="@string/text_label_multi_desc" />

    <TableLayout
        android:id="@+id/tableLayoutDateAttendanceMulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:id="@+id/tableRowDateMulti1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_label_tanggal" />

            <EditText
                android:id="@+id/editTextDateMulti1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <ImageView
                android:id="@+id/imageViewDateMulti1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="0"
                android:visibility="invisible"
                app:srcCompat="@drawable/close32" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowDateMulti2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_label_tanggal" />

            <EditText
                android:id="@+id/editTextDateMulti2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <ImageView
                android:id="@+id/imageViewDateMulti2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="1"
                app:srcCompat="@drawable/close32" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowDateMulti3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_label_tanggal" />

            <EditText
                android:id="@+id/editTextDateMulti3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <ImageView
                android:id="@+id/imageViewDateMulti3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="2"
                app:srcCompat="@drawable/close32" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowDateMulti4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_label_tanggal" />

            <EditText
                android:id="@+id/editTextDateMulti4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <ImageView
                android:id="@+id/imageViewDateMulti4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="3"
                app:srcCompat="@drawable/close32" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowDateMulti5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_label_tanggal" />

            <EditText
                android:id="@+id/editTextDateMulti5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <ImageView
                android:id="@+id/imageViewDateMulti5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="4"
                app:srcCompat="@drawable/close32" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowDateMulti6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_label_tanggal" />

            <EditText
                android:id="@+id/editTextDateMulti6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <ImageView
                android:id="@+id/imageViewDateMulti6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="5"
                app:srcCompat="@drawable/close32" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAddAttendanceMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/add32_icon" />

    </LinearLayout>

</LinearLayout>