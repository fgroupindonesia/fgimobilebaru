<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewCountryFlag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/countryflag_indonesia"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textviewCountryClient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/text_title_desktop_country"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textviewStatusClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/text_title_desktop_status"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textviewIPAddressClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/text_title_desktop_ipaddress"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textviewMachineID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/text_title_desktop_macid"
            android:textSize="14sp"
            android:visibility="gone" />

        <View style="@style/HorizontalLine" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewClientLogout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/shutdown64"
           />
    </LinearLayout>

</LinearLayout>